# Auto detect text files and perform LF normalization
* text=auto

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf
*.bash text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Mark shell scripts as executable
*.sh linguist-language=Shell
*.bash linguist-language=Shell

# Documentation
*.md linguist-documentation=true
docs/** linguist-documentation=true

# Examples and tests
examples/** linguist-documentation=true
tests/** linguist-documentation=true

# Language detection
patterns/** linguist-language=Shell
scripts/** linguist-language=Shell